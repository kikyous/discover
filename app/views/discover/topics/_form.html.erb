<%= form_for(topic) do |f| %>
  <div class="form-group">
    <%= f.collection_select :node_id, Discover::Node.all, :id, :to_s, {},class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: '标题' %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', rows: '8' %>
  </div>

  <div class="actions">
    <%= f.submit '提交', class: 'btn btn-success' %>
  </div>
<% end %>
